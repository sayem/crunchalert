<div id="header">
  <a href="/"><%= image_tag("crunchalert_logo.png", :alt => "crunchalert") %></a>

  <div class="login">

    <% if !signed_in? %>
    <%= link_to "Register", signup_path %>
    <%= link_to "Login", login_path %>
    <% else %>
    <%= link_to "Account", edit_user_path(current_user) %>
    <%= link_to "Logout", logout_path, :method => :delete %>
    <% end %>

  </div>


  <ul class="blurb">

    Get email alerts on updates from <a href="http://crunchbase.com">Crunchbase</a>

  </ul>

</div>
