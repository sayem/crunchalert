
<% if signed_in? %>

<%= render 'shared/crunchbase_form' %>
<%= render 'shared/news_form' %>

<br />
<br />

<div id="input">
</div>

<br />
<br />

<% @alerts.each do |alert| %>
<div class="crunchalert">
  <%= image_tag(Picture.find_by_content(alert.content)[:url]) %>

  <% unless alert.content.split[1] %>
    <%=h alert.content.capitalize %>
  <% else %>
    <%=h alert.content.split[0].capitalize << ' ' << alert.content.split[1].capitalize %>
  <% end %>

  <span class="edit_alert">Edit</span> 
</div>
<% end %>

<% end %>
